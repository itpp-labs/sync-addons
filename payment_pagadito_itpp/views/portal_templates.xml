<odoo>
    <template
        id="report_shop_saleorder_document"
        inherit_id="website_portal_sale.orders_followup"
    >
        <xpath expr="//div[@class='panel-body']" position="inside">
            <t t-if="order.payment_acquirer_id.provider == 'pagadito'">
                <div class="mt8">
                    <strong>Payment confirmation codes:</strong> NAP=<t
                        t-raw="order.payment_tx_id.acquirer_reference"
                    />, ERN=<t t-raw="order.payment_tx_id.reference" />
                </div>
                <br />
            </t>
        </xpath>
    </template>
</odoo>
